<odoo>
	<data>
		<record id="person_action_id" model="ir.actions.act_window">
			<field name="name">Person</field>
			<field name="res_model">zakat.person</field>
			<field name="view_mode">tree,graph,pivot,calendar,form</field>
		</record>

		<record id="order_action_id" model="ir.actions.act_window">
			<field name="name">Order</field>
			<field name="res_model">zakat.order</field>
			<field name="view_mode">tree,form</field>
		</record>

		<record id="masrif_action_id" model="ir.actions.act_window">
			<field name="name">Masrif</field>
			<field name="res_model">zakat.type</field>
			<field name="view_mode">tree,form</field>
		</record>

		<record id="person_search_view" model="ir.ui.view">
			<field name="name">Person</field>
			<field name="model">zakat.person</field>
			<field name="arch" type="xml">
				<search>
					<field name="name"/>
					<field name="gender"/>
					<field name="phone"/>
				</search>	
			</field>
		</record>

		<record id="person_tree_view" model="ir.ui.view">
			<field name="name">Person</field>
			<field name="model">zakat.person</field>
			<field name="arch" type="xml">
				<tree>
					<field name="name"/>
					<field name="national_no"/>
					<field name="phone"/>
					<field name="gender"/>					
					<field name="is_deserve"/>					
				</tree>
			</field>
		</record>

		<record id="person_graph_view" model="ir.ui.view">
			<field name="name">Person</field>
			<field name="model">zakat.person</field>
			<field name="arch" type="xml">
				<graph>
					<field name="name"/>
					<field name="salary" type="measure"/>
				</graph>
			</field>
		</record>

		<record id="person_pivot_view" model="ir.ui.view">
			<field name="name">Person</field>
			<field name="model">zakat.person</field>
			<field name="arch" type="xml">
				<pivot>
					<field name="name"/>
					<field name="salary" type="measure"/>
				</pivot>
			</field>
		</record>

		<record id="person_calendar_view" model="ir.ui.view">
			<field name="name">Person</field>
			<field name="model">zakat.person</field>
			<field name="arch" type="xml">
				<calendar date_start="birth_date" color="name">
					<field name="name"/>
					<field name="salary"/>
				</calendar>
			</field>
		</record>


		<record id="person_form_view" model="ir.ui.view">
			<field name="name">Person</field>
			<field name="model">zakat.person</field>
			<field name="arch" type="xml">
				<form>

                    <header>
                        <button string="Confirm" class="btn btn-primary o_employee_chat_btn"/>
                        <button string="Cancel" class="btn-primary"/>
                    </header>


					<sheet>
						<field name="image" widget="image" class="oe_avatar" options="{&quot;zoom&quot;: true, &quot;preview_image&quot;:&quot;image&quot;}"/>
						<group>
							<group>
								<field name="name"/>
								<field name="national_no"/>
								<field name="phone"/>
								
							</group>

							<group>
								<field name="gender"/>
								<field name="is_deserve"/>
								
								<field name="birth_date"/>							
							</group>
						</group>

						<notebook>
							<page string="Address">
								<field name="address"/>
							</page>

							<page string="Orders">
								<field name="orders"/>
							</page>

							<page string="Other Info">
								<group>
									<field name="masrif_type"/>	
									<field name="salary"/>
								</group>
							</page>
						</notebook>
					</sheet>
				</form>
			</field>
		</record>


		<menuitem name="Zakat System" id="zakat_root_menu"/>
		<menuitem name="Person" id="zakat_person_menu" parent="zakat_root_menu" action="person_action_id"/>
		<menuitem name="Order" id="zakat_order_menu" parent="zakat_root_menu" action="order_action_id"/>
		<menuitem name="Masrif" id="zakat_masrif_menu" parent="zakat_root_menu" action="masrif_action_id"/>

	</data>
</odoo>